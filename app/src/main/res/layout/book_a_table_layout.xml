<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tableTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Choose a Table"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="301dp"
            android:layout_below="@+id/tableTitle"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/blue" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@+id/tableTitle"
            android:layout_marginTop="85dp"

            app:srcCompat="@drawable/white" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableTitle"
            android:layout_marginTop="15dp"
            android:layout_margin="15dp"
            android:text="Table 1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableTitle"
            android:layout_marginTop="113dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:text="Table 2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableTitle"
            android:layout_marginTop="233dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:text="Table 3" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableTitle"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Table 4" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableTitle"
            android:layout_marginLeft="315dp"
            android:layout_marginTop="15dp"

            android:text="Table 5" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableTitle"
            android:layout_marginTop="99dp"
            android:layout_marginBottom="10dp"
            android:text="Table 6"
            android:layout_marginLeft="315dp"/>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="244dp"
            android:layout_height="142dp"
            android:layout_below="@+id/tableTitle"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="160dp"
            app:srcCompat="@drawable/white" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableTitle"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="133dp"
            android:background="@null"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Garden" />;

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableTitle"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="237dp"
            android:background="@null"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Garden" />;


        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:hint="Full Name"
            android:layout_below="@+id/imageView3"/>

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:hint="Username"
            android:layout_below="@+id/name"/>

        <EditText
            android:id="@+id/numberOfPeople"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:hint="Number of People"
            android:layout_below="@+id/username"
            android:inputType="number"/>

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:hint="Phone Number"
            android:layout_below="@+id/numberOfPeople"
            android:inputType="number"/>

        <Button
        android:id="@+id/dateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneNumber"
        android:layout_marginTop="20dp"
        android:text="Click to Select Date" />
        <TextView
            android:id="@+id/dateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateButton"
            android:text="Date Selected"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/timeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateText"
            android:layout_marginTop="20dp"
            android:text="Click to Select Time" />
        <TextView
            android:id="@+id/timeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeButton"
            android:text="Time Selected"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeText"
            android:text="Submit"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>


    </RelativeLayout>


</ScrollView>